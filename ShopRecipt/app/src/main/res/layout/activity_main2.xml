<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="0"
    tools:context="endri.agung.shoprecipt.MainActivity2">

    <TableRow>
        <TextView android:text="meja"/>
        <TextView
            android:id="@+id/meja_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/meja_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"/>
    </TableRow>
    <TableRow>
        <TextView android:text="kursi"/>
        <TextView
            android:id="@+id/kursi_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/kursi_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"/>
    </TableRow>
    <TableRow>
        <TextView android:text="lemari"/>
        <TextView
            android:id="@+id/lemari_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/lemari_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"/>
    </TableRow>
    <TableRow>
        <TextView android:text="bipet"/>
        <TextView
            android:id="@+id/bipet_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/bipet_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"/>
    </TableRow>
    <TableRow>
        <TextView android:text="gucci"/>
        <TextView
            android:id="@+id/gucci_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/gucci_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"/>
    </TableRow>
    <TableRow
            android:background="@color/lightgray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp">
        <TextView
            android:text="total pembelian"
            android:layout_span="2"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grand_total"
            android:width="100dp"
            android:gravity="right"
            android:text="500000"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </TableRow>

</TableLayout>
