<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oki.candra.portofolio.MainActivity"
    android:background="@drawable/flat">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#4052b5"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biodata"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textSize="24dp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/oki" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama    :"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/frameLayout2"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oki Candra T"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM       :"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A22.2015.02479"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motto    :"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Threat all people as an equal&quot;"
        android:id="@+id/textView7"
        android:textSize="14dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textStyle="italic"
        android:textColor="#e13513" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cita-Cita   :"
        android:id="@+id/textView8"
        android:textSize="18dp"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menjadi karyawan Google"
        android:id="@+id/textView9"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/accent_material_light"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/keluar"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
